show databases;
create database livros_exercicio_new;
use livros_exercicio_new;
create table livros
(
cod_livro int auto_increment,
titulo varchar(200),
autor varchar(200),
valor varchar(200),
genero varchar(200),
cliente varchar(200),
primary key(cod_livro)
);
show tables;
desc livros;
